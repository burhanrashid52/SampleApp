         motion:duration="1000">
         <OnSwipe
             motion:dragDirection="dragUp"
             motion:touchAnchorId="@+id/button"
             motion:touchAnchorSide="bottom" />
     </Transition>-->


    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@+id/start"
        motion:duration="1000">
        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@+id/button"
            motion:touchAnchorSide="bottom" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@id/button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/holo_red_dark"
            motion:layout_constraintDimensionRatio="w,9:16"
            motion:layout_constraintEnd_toEndOf="@+id/guidelineStartEnd"
            motion:layout_constraintStart_toStartOf="@+id/guidelineStart"
            motion:layout_constraintTop_toTopOf="@+id/guidelineTop">

            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="#D81B60" />

        </Constraint>

        <Constraint
            android:id="@id/guidelineStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            motion:layout_constraintGuide_percent="0.0" />


        <Constraint
            android:id="@id/guidelineTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            motion:layout_constraintGuide_percent="0.0" />

        <Constraint
            android:id="@id/guidelineStartEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            motion:layout_constraintGuide_percent="1.0" />

        <Constraint
            android:id="@id/image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="@+id/button"
            motion:layout_constraintEnd_toEndOf="@+id/button"
            motion:layout_constraintStart_toStartOf="@+id/button"
            motion:layout_constraintTop_toTopOf="@+id/button">

            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="0" />

        </Constraint>


    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@id/button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/holo_red_dark"
            motion:layout_constraintDimensionRatio="w,9:16"
            motion:layout_constraintEnd_toEndOf="@+id/guidelineStartEnd"
            motion:layout_constraintStart_toStartOf="@+id/guidelineStart"
            motion:layout_constraintTop_toTopOf="@+id/guidelineTop">
            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="#9999FF" />

        </Constraint>


        <Constraint
            android:id="@id/guidelineStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            motion:layout_constraintGuide_percent="0.40" />


        <Constraint
            android:id="@id/guidelineTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            motion:layout_constraintGuide_percent="0.75" />

        <Constraint
            android:id="@id/guidelineStartEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            motion:layout_constraintGuide_percent="0.975" />

        <Constraint
            android:id="@id/image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="@+id/button"
            motion:layout_constraintEnd_toEndOf="@+id/button"
            motion:layout_constraintStart_toStartOf="@+id/button"
            motion:layout_constraintTop_toTopOf="@+id/button">

            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="1" />

        </Constraint>

    </ConstraintSet>

</MotionScene>